    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="14dp">

        <ImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/b9j"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/iv_header_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="樱天寻"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="12dp"
                    android:src="@drawable/e0f"/>

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/e0d"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibtn_header_change_skin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:onClick="ibtnChangeBg"
            android:src="@drawable/kg_listen_slide_menu_header_skin_btn_normal"/>
    </RelativeLayout>

</LinearLayout>
